<div class="post" id="{{post.id}}">
    <h2>Created by:{{post.User.username}}</h2>
    <h2>Created at:{{post.createdAt}}</h2>
    <h2>Title:{{post.title}}</h2>
    <p>Text: {{post.text}}</p>
    {{#unless author}}
    {{else}}
    <button id="deletePost">Delete post</button>
    <script src="/js/deletePost.js"></script>
    {{/unless}}
</div>
<U><h2>Comments</h2></U>
    {{#each comments as |comment|}}
    {{> comment-partial}}
    {{/each}}

    
           
            
          
{{#unless logged_in}}
<a href="/login">Login to leave a comment</a>
{{else}}
<section class="comment-menu">
    
    <div class="user" id="{{userId}}"></div>
    <form class="comment-form">
    <h2>Make comment</h2>
    <label for='text'>Text</label>
    <input placeholder="text" type="text" id="text" name="text" required>

    <input type="submit" value="post comment">
    </form>
</section>
<script src="/js/comment.js"></script>
{{/unless}}

